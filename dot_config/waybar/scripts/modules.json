{
  "mpris": {
    "player": "false",
    "format": "[   {status_icon} | {dynamic} ]",
    "format-paused": "[   {status_icon} | {dynamic} ]",
    "format-stopped": "[   {status_icon} | No media playing ]",
    "format-disconnected": "[    | No media playing ]",
    "interval": 1,
    "status-icons": {
      "playing": "",
      "paused": "",
      "stopped": ""
    },
    "dynamic-order": ["artist", "title"]
  },

  "custom/appmenu": {
    "format": "",
    "tooltip-format": "Left: Open the application launcher",
    "on-click": "fuzzel"
  },

  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "󱅫",
      "none": "󰂚",
      "dnd-notification": "󱅫",
      "dnd-none": "󰂛",
      "inhibited-notification": "",
      "inhibited-none": "",
      "dnd-inhibited-notification": "",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

  "sway/scratchpad": {
    "format": "{icon} {count}",
    "show-empty": false,
    "format-icons": ["", ""],
    "tooltip": true,
    "tooltip-format": "{app}: {title}"
  },

  "tray": {
    "icon-size": 24,
    "spacing": 10
  },

  "clock": {
    "format": " {:%a %d %b %H:%M}"
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}   {capacity}%",
    "format-charging": "  {capacity}%",
    "format-plugged": "  {capacity}%",
    "format-alt": "{icon}  {time}",
    "format-icons": [" ", " ", " ", " ", " "]
  }
}
